<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ambta_doctrine_encrypt.orm_subscriber.class">Ambta\DoctrineEncryptBundle\Subscribers\DoctrineEncryptSubscriber</parameter>
        <parameter key="ambta_doctrine_encrypt.encryptor.class">Ambta\DoctrineEncryptBundle\Services\Encryptor</parameter>
    </parameters>

    <services>
        <service id="ambta_doctrine_encrypt.orm_subscriber" class="%ambta_doctrine_encrypt.orm_subscriber.class%">
            <argument type="service" id="annotation_reader"/>
            <argument>%ambta_doctrine_encrypt.encryptor_class_name%</argument>
            <argument>%ambta_doctrine_encrypt.secret_key%</argument>
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="ambta_doctrine_encrypt.subscriber" alias="ambta_doctrine_encrypt.orm_subscriber"/>

        <service id="ambta_doctrine_encrypt.encryptor" class="%ambta_doctrine_encrypt.encryptor.class%">
            <argument>%ambta_doctrine_encrypt.encryptor_class_name%</argument>
            <argument>%ambta_doctrine_encrypt.secret_key%</argument>
        </service>
    </services>
</container>
